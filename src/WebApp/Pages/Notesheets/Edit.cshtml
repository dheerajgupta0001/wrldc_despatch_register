@page
@model WebApp.Pages.Notesheets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Notesheet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Notesheet.ReferenceNo" class="control-label"></label>
                <input asp-for="Notesheet.ReferenceNo" class="form-control" readonly />
                <span asp-validation-for="Notesheet.ReferenceNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notesheet.PackageName" class="control-label"></label>
                <input asp-for="Notesheet.PackageName" class="form-control" />
                <span asp-validation-for="Notesheet.PackageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notesheet.Type" class="control-label"></label>
                <input asp-for="Notesheet.Type" class="form-control" />
                <span asp-validation-for="Notesheet.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notesheet.Description" class="control-label"></label>
                @*<input asp-for="Notesheet.Description" class="form-control" />*@
                <textarea asp-for="Notesheet.Description" class="form-control"  rows="3" cols="50"></textarea>
                <span asp-validation-for="Notesheet.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notesheet.ScopeOfWork" class="control-label"></label>
                @*<input asp-for="Notesheet.ScopeOfWork" class="form-control" />*@
                <textarea asp-for="Notesheet.ScopeOfWork" class="form-control" rows="3" cols="50"></textarea>
                <span asp-validation-for="Notesheet.ScopeOfWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notesheet.Technical_Specification" class="control-label"></label>
                @*<input asp-for="Notesheet.Technical_Specification" class="form-control" />*@
                <textarea asp-for="Notesheet.Technical_Specification" class="form-control" rows="3" cols="50"></textarea>

                <span asp-validation-for="Notesheet.Technical_Specification" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="Notesheet.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
